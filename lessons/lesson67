<body>

    <div id="game-container">
        <div id="hud">
            <div class="hud-item">Level: <span id="level-display">1/10</span></div>
            <div class="hud-item"><span id="lives-display">‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è</span></div>
            <div class="hud-item">Score: <span id="score-display">0</span></div>
        </div>
        <div id="question-display">? - ? = ?</div>
    </div>

    <!-- Start Screen -->
    <div id="start-screen" class="screen">
        <h1>Challenge Mode! üî•</h1>
        <p>Pop the correct balloon before it flies away!<br>You possess 3 lives. Don't lose them!</p>
        <button class="btn" onclick="startGame()">I'm Ready!</button>
    </div>

    <!-- Game Over Screen -->
    <div id="game-over-screen" class="screen hidden">
        <h1 class="game-over-title">Game Over! üíî</h1>
        <p>The balloons were too fast this time!</p>
        <div style="font-size: 2rem; margin-bottom: 30px; font-weight: bold;">Score: <span id="fail-score">0</span>
        </div>
        <button class="btn" onclick="location.reload()">Try Again</button>
    </div>

    <!-- Success Screen -->
    <div id="end-screen" class="screen hidden">
        <h1>Victory! üèÜ</h1>
        <p id="final-message">You survived the challenge!</p>
        <div style="font-size: 2.5rem; margin-bottom: 30px; font-weight: bold; color: var(--primary);">Final Score:
            <span id="final-score">0</span>
        </div>
        <button class="btn" onclick="finishLesson()">Complete</button>
    </div>

    <script>
        // --- CONFIGURATION ---
        const CONFIG = {
            lessonId: 63,
            type: 'mixed', // 'addition', 'subtraction', 'multiplication', 'division', 'mixed'
            maxNum: 20, // Used for operand generation
            minNum: 1,
            questionCount: 25, // Longer
            speed: 4.0, // Very fast balloons
            lives: 1 // Sudden death
        };

        // --- STATE ---
        let state = {
            score: 0,
            lives: CONFIG.lives,
            currentQuestionIndex: 0,
            isActive: false,
            balloons: [],
            currentQuestion: null,
            spawnInterval: null,
            correctBalloonSpawned: false
        };

        const COLORS = ['#ef4444', '#f97316', '#eab308', '#22c55e', '#06b6d4', '#3b82f6', '#8b5cf6', '#d946ef'];

        function startGame() {
            document.getElementById('start-screen').classList.add('hidden');
            state.score = 0;
            state.lives = CONFIG.lives;
            state.currentQuestionIndex = 0;
            state.isActive = true;
            updateHUD();
            nextQuestion();
            gameLoop();

            // Spawn balloons frequently
            state.spawnInterval = setInterval(spawnBalloon, 1200);
        }

        function generateQuestion() {
            let a, b, text, ans;
            const type = CONFIG.type === 'mixed' ?
                ['addition', 'subtraction'][Math.floor(Math.random() * 2)] :
                CONFIG.type;

            switch (type) {
                case 'subtraction':
                    a = Math.floor(Math.random() * CONFIG.maxNum) + CONFIG.minNum; // Minuend
                    b = Math.floor(Math.random() * a); // Subtrahend (smaller than a)
                    text = `${a} - ${b} = ?`;
                    ans = a - b;
                    break;
                case 'multiplication':
                    a = Math.floor(Math.random() * 12) + 1; // 1-12
                    // Table specific or random? Let's do random small numbers
                    b = Math.floor(Math.random() * 10) + 1;
                    if (CONFIG.maxNum <= 12) { // Restrict if config says so (e.g. 2x table)
                        b = Math.floor(Math.random() * CONFIG.maxNum) + 1;
                    }
                    text = `${a} √ó ${b} = ?`;
                    ans = a * b;
                    break;
                case 'division':
                    // Generate multiplication first to ensure integer division
                    b = Math.floor(Math.random() * 10) + 2; // Divisor (2-11)
                    ans = Math.floor(Math.random() * 10) + 1; // Quotient
                    a = b * ans;
                    text = `${a} √∑ ${b} = ?`;
                    break;
                case 'addition':
                default:
                    a = Math.floor(Math.random() * CONFIG.maxNum);
                    b = Math.floor(Math.random() * CONFIG.maxNum);
                    text = `${a} + ${b} = ?`;
                    ans = a + b;
                    break;
            }

            return { text, answer: ans };
        }

        function nextQuestion() {
            if (state.currentQuestionIndex >= CONFIG.questionCount) {
                endGame(true);
                return;
            }
            state.currentQuestionIndex++;
            state.currentQuestion = generateQuestion();
            document.getElementById('question-display').innerText = state.currentQuestion.text;

            // Clear existing balloons to focus
            clearBalloons();
            state.correctBalloonSpawned = false;

            // Spawn correct answer soon
            setTimeout(() => { if (state.isActive) spawnBalloon(true); }, 200);

            updateHUD();
        }

        function spawnBalloon(forceCorrect = false) {
            if (!state.isActive) return;

            const container = document.getElementById('game-container');
            const balloonEl = document.createElement('div');
            balloonEl.className = 'balloon-container';

            let value;
            // Ensure at least one correct balloon appears per question cycle if forced or random chance
            if (forceCorrect || (!state.correctBalloonSpawned && Math.random() < 0.3)) {
                value = state.currentQuestion.answer;
                balloonEl.classList.add('is-correct'); // Marker
                state.correctBalloonSpawned = true;
            } else {
                // Distractor
                do {
                    let range = 10;
                    if (CONFIG.type === 'multiplication') range = 20;
                    let offset = Math.floor(Math.random() * (range * 2)) - range;
                    value = state.currentQuestion.answer + offset;
                } while (value === state.currentQuestion.answer || value < 0);
            }

            const color = COLORS[Math.floor(Math.random() * COLORS.length)];

            balloonEl.innerHTML = `
                <div class="balloon" style="--balloon-color: ${color}">
                    <span class="balloon-text">${value}</span>
                </div>
            `;

            // Position (Random X, Start at bottom -200)
            const startX = Math.random() * (window.innerWidth - 120);
            balloonEl.style.left = `${startX}px`;
            balloonEl.style.bottom = '-200px';

            balloonEl.onmousedown = () => popBalloon(balloonEl, value);

            container.appendChild(balloonEl);

            // Physics
            balloonEl._speed = (Math.random() * 2 + 2) * CONFIG.speed; // Faster!
            balloonEl._wobble = Math.random() * Math.PI * 2;

            state.balloons.push(balloonEl);
        }

        function popBalloon(el, value) {
            if (!state.isActive) return;

            if (value === state.currentQuestion.answer) {
                handleCorrect(el);
            } else {
                handleWrong(el);
            }
        }

        function handleCorrect(el) {
            speak("Correct");

            // Visual pop
            el.style.transform = "scale(1.5)";
            el.style.opacity = "0";
            setTimeout(() => { if (el.parentNode) el.remove(); }, 200);

            // Confetti
            const rect = el.getBoundingClientRect();
            confetti({
                particleCount: 30,
                spread: 50,
                origin: {
                    x: (rect.left + rect.width / 2) / window.innerWidth,
                    y: (rect.top + rect.height / 2) / window.innerHeight
                }
            });

            state.score += 50; // Higher score for challenge
            updateHUD();

            // Next question after short delay
            setTimeout(nextQuestion, 800);
        }

        function handleWrong(el) {
            loseLife("Wrong balloon!");
            el.querySelector('.balloon').style.background = '#555';
            el.classList.add('popped');
            el.style.animation = "shake 0.5s";
            setTimeout(() => {
                if (el.parentNode) el.remove();
                state.balloons = state.balloons.filter(b => b !== el);
            }, 500);
        }

        function loseLife(reason) {
            state.lives--;
            speak("Oh no!");
            updateHUD();
            document.body.classList.add('danger-flash');
            setTimeout(() => document.body.classList.remove('danger-flash'), 500);

            if (state.lives <= 0) {
                endGame(false);
            }
        }

        function gameLoop() {
            if (!state.isActive) return requestAnimationFrame(gameLoop);

            const containerHeight = window.innerHeight;

            for (let i = state.balloons.length - 1; i >= 0; i--) {
                const el = state.balloons[i];
                if (el.classList.contains('popped')) continue;

                // Move up
                const currentBottom = parseFloat(el.style.bottom || -200);
                const newBottom = currentBottom + el._speed;

                // Wobble
                el._wobble += 0.08;
                const wobbleX = Math.sin(el._wobble) * 3;

                el.style.bottom = `${newBottom}px`;
                el.style.transform = `translateX(${wobbleX}px)`;

                // Off Screen Check
                if (newBottom > containerHeight + 50) {
                    el.remove();
                    state.balloons.splice(i, 1);

                    // If correct answer escaped -> Penalty!
                    if (el.classList.contains('is-correct')) {
                        // Wait, don't punish immediately if another correct one is on screen? 
                        // No, let's be strict. If you miss it, you lose a life.
                        // But need to ensure we don't spawn multiple correct ones?
                        // Actually, I control spawns.

                        // To be fair: Only penalize if it was "THE" correct balloon?
                        // Let's just say "Missed it!"
                        loseLife("Missed it!");

                        // If still alive, respawn it? Or just wait for next interval?
                        // Next interval might spawn it.
                        state.correctBalloonSpawned = false;
                    }
                }
            }

            requestAnimationFrame(gameLoop);
        }

        function clearBalloons() {
            state.balloons.forEach(el => el.remove());
            state.balloons = [];
        }

        function updateHUD() {
            document.getElementById('score-display').innerText = state.score;
            document.getElementById('level-display').innerText = `${state.currentQuestionIndex}/${CONFIG.questionCount}`;

            // Hearts
            let hearts = "";
            for (let i = 0; i < state.lives; i++) hearts += "‚ù§Ô∏è";
            for (let i = state.lives; i < CONFIG.lives; i++) hearts += "üñ§";
            document.getElementById('lives-display').innerText = hearts;
        }

        function endGame(victory) {
            state.isActive = false;
            clearInterval(state.spawnInterval);
            clearBalloons();

            if (victory) {
                document.getElementById('end-screen').classList.remove('hidden');
                document.getElementById('final-score').innerText = state.score;
                speak("Challenge complete! You are amazing!");
                confetti({ particleCount: 200, spread: 100, origin: { y: 0.6 } });
            } else {
                document.getElementById('game-over-screen').classList.remove('hidden');
                document.getElementById('fail-score').innerText = state.score;
                speak("Game Over. Try again!");
            }
        }

        function finishLesson() {
            window.parent.postMessage({ type: 'lessonCompleted', lessonId: CONFIG.lessonId }, '*');
        }

        function speak(text) {
            if (window.speechSynthesis.speaking) window.speechSynthesis.cancel();
            const msg = new SpeechSynthesisUtterance(text);
            window.speechSynthesis.speak(msg);
        }

        // Add shake animation style dynamically
        const styleSheet = document.createElement("style");
        styleSheet.innerText = `
            @keyframes shake {
                0% { transform: translateX(0); }
                25% { transform: translateX(-10px); }
                50% { transform: translateX(10px); }
                75% { transform: translateX(-10px); }
                100% { transform: translateX(0); }
            }
        `;
        document.head.appendChild(styleSheet);

    </script>
</body>

</html>