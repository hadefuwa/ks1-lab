            border-radius: 50px;
            border: 4px solid #fff;
            animation: popIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        @keyframes popIn {
            0% {
                transform: scale(0);
                opacity: 0;
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        /* Balloons */
        .balloon-container {
            position: absolute;
            bottom: -200px;
            cursor: pointer;
            transition: transform 0.1s;
            will-change: transform;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .balloon-container:active {
            transform: scale(0.95);
        }

        .balloon {
            width: 110px;
            height: 140px;
            background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0) 20%),
                var(--balloon-color, #ff5e57);
            border-radius: 50% 50% 50% 50% / 40% 40% 60% 60%;
            box-shadow: inset -10px -10px 20px rgba(0, 0, 0, 0.1), 5px 10px 15px rgba(0, 0, 0, 0.15);
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .balloon::before {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 0;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-top: 15px solid var(--balloon-color, #ff5e57);
        }

