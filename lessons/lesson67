        .hud-item {
            background: rgba(255, 255, 255, 0.9);
            padding: 10px 25px;
            border-radius: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--secondary);
            border: 3px solid #fff;
            display: flex;
            align-items: center;
            gap: 10px;
        }

